@model List<Question>
@{
    ViewBag.Title = "Ερωτήσεις";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ερωτήσεις</h3>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Ερώτηση</th>
                        <th>Μάθημα</th>
                        <th>Ενέργεις</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var question in Model)
                    {
                        <tr>
                            <td>@question.Name</td>
                            <td>@question.</td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("EditTopic","Admin", new {topicId = question.Id})"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="top"
                                   title="Click to Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>