@model TWYK.Web.Models.TeacherUsersModel
@{
    ViewBag.Title = "TeacherUsers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row justify-content-center">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Μαθητές</h3>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role Names</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model.Students) {
                        <tr>
                            <th scope="row">@user.Id</th>
                            <td style="width: 18%;">@user.FirstName</td>
                            <td style="width: 18%;">@user.LastName</td>
                            <td style="width: 18%;">@user.Email</td>
                            <td style="width: 18%;">@user.RoleNames.ToString()</td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("UserResults","Admin", new {stundentId=user.Id, teacherId = Model.Teacher.Id})"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="top"
                                   title="Click to Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
        
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>