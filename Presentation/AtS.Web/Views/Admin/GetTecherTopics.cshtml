@model List<Topic>
@{
    ViewBag.Title = "GetTecherTopics";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col">
        <h2>Μαθήματα</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Μάθημα</th>
                <th>Καθηγητής</th>
                <th>Ενέργεις</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var tp in Model) {
                <td>@tp.Name</td>
                <td>@tp.Customer.FirstName @tp.Customer.LastName</td>
                <td style="text-align: center;">
                    <a href="@Url.Action("GetTecherTopic","Admin", new {topicId = tp.Id})"
                       data-bs-toggle="tooltip"
                       data-bs-placement="top"
                       title="Click to Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            }
            </tbody>
        </table>
    </div>

</div>