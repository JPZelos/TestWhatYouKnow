@model List<Topic>
@{
    ViewBag.Title = "GetTecherTopics";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Μαθήματα</h3>
                <div class="card-options">
                    <a type="button" href="@Url.Action("GetTecherTopic","Admin", new {topicId = 0})" class="btn-block-option" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Νέο Μάθημα">
                        <i class="bi bi-plus-square"></i> Νέο Μάθημα
                    </a>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Μάθημα</th>
                        <th>Καθηγητής</th>
                        <th>Ενέργεις</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var tp in Model)
                    {
                        <tr>
                            <td>@tp.Name</td>
                            <td>@tp.Customer.FirstName @tp.Customer.LastName</td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("GetTecherTopic","Admin", new {topicId = tp.Id})"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="top"
                                   title="Click to Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>