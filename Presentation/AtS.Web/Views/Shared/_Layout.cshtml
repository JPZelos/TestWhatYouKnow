<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/css/drop-down-cart/drop-down-cart.css" rel="stylesheet" />
    <link href="~/Content/css/side-bar.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    
    <div id="bar-notification"></div>

    @Html.Action("NavLinks", "Common")

    @Html.Partial("_Header")

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            @RenderBody()
        </div>
    </section>

    @Html.Partial("_Footer")





    @Scripts.Render("~/bundles/mitsos")

    @*<script src="~/Content/css/bootstrap.bundle.min.js"></script>*@

    @Scripts.Render("~/bundles/ajaxcart")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        AjaxCart.init(false, '.navbar .cart-qty', '.navbar .wishlist-qty', '#flyout-cart');
        (function () {
            $(document).on("mouseup touchstart",function(e){
                var target = $("#flyout-cart");
                if (!target.is(e.target) && target.has(e.target).length === 0) {
                    target.hide("slow");
                }
            });

            $("#cart").on("mouseover", function () {
                $(".shopping-cart").show("slow");
            });
        })();
    </script>

</body>

</html>
