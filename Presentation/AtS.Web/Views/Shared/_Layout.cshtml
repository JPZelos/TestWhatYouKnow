<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"/>
    @Styles.Render("~/Content/maincss")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/css/side-bar.css" rel="stylesheet"/>
    
    <style>
        body {
            font-size: 14px;
            background-color: #f9f9f9;
        }
        h6, .h6, h5, .h5, h4, .h4, h3, .h3, h2, .h2, h1, .h1 {
            margin-top: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 700;
            line-height: 1.2;
            color: #b31f24;
        }
        h1,h2 {
            margin-top: 0;
        }
        .btn {
            font-weight: 700;
        }
        .btn-primary {
            background-color: #b31f24;
            border-color: #b31f24;
        }
        .form-label {
            font-weight: 700;
        }

        .card-title {
            margin-top:0;
            margin-bottom: 0.5rem;
        }
        .rounded-1r {
            border-radius: 1rem !important;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    @Html.Action("NavLinks", "Common")

    @Html.Partial("_Header")

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            @RenderBody()
        </div>
    </section>


    @Html.Partial("_Footer")


    @Scripts.Render("~/bundles/jqueryBootstrap")

    @*<script src="~/Content/css/bootstrap.bundle.min.js"></script>*@

    @Scripts.Render("~/bundles/ajaxcart")
    @RenderSection("scripts", false)

    <script type="text/javascript">
        (function () {
            $(document).on("mouseup touchstart", function (e) {
                var target = $("#flyout-cart");
                if (!target.is(e.target) && target.has(e.target).length === 0) {
                    target.hide("slow");
                }
            });

        })();
    </script>

</body>

</html>