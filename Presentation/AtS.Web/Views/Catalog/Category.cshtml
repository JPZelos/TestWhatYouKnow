@model TWYK.Web.Models.CategoryModel
@{
    ViewBag.Title = "Category";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-2">
        @Html.Action("SideBarMenu", "Catalog", new { categoryId = Model.Id })
    </div>
    <div class="col-10">
        <div class="row gx-1 gx-lg-2 row-cols-2 row-cols-md-3">
            @foreach (var item in Model.Products) {
                @Html.Partial("_ProductBox", item)
            }
        </div>
    </div>
</div>