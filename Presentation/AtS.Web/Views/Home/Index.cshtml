@model List<TWYK.Web.Models.TopicModel>
@{
    ViewBag.Title = "Home Page";
}

@foreach (var topic in Model) {
    <div class="row justify-content-center">
        <div class="row">
            <h2>Μάθημα: <strong>@topic.Name</strong></h2>
        </div>
        
        <h3>Κεφάλαια</h3>
        <ul>
            @foreach (var chapter in topic.Chapters) {
                <li><a href="@Url.RouteUrl("Chapter", new{chapterId=@chapter.Id})"> @chapter.Name</a></li>
            }
        </ul>
        
    </div>
}