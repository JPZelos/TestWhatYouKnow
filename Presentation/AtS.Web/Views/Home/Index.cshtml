@model List<TWYK.Web.Models.TopicModel>
@{
    ViewBag.Title = "Home Page";
}


@foreach (var topic in Model)
{
    <div class="col mb-5">
        <div class="row justify-content-center">
            <div class="row">
                <h2><strong>@topic.Name (@topic.Chapters.Count)</strong> Κεφάλαια</h2>
            </div>

            @foreach (var chapter in topic.Chapters)
            {


                <div class="col mb-5">
                    <div class="card bg-light h-100">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Δημοφιλές</div>

                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div>
                                <!-- Product name-->
                                <h5 class="fw-bolder">@chapter.Name</h5>
                                <div class="small mb-1">@chapter.Topic.Customer.FirstName @chapter.Topic.Customer.LastName</div>

                                <!-- Product price-->
                                @*<span class="text-muted text-decoration-line-through"></span>*@

                                <strong>@chapter.Questions.Count</strong> Ερωτήσεις

                            </div>
                        </div>
                        <!-- Add To Cart actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-end">
                                <a class="btn btn-outline-dark mt-auto" href="@Url.RouteUrl("Chapter", new { chapterId = @chapter.Id })">Λεπτομέρειες</a>
                            </div>
                        </div>
                    </div>
                </div>


                
            }
        </div>
    </div>
   
}
